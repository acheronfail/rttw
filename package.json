{
    "name": "rttw-server",
    "version": "0.2.0",
    "private": true,
    "dependencies": {
        "body-parser": "^1.19.0",
        "chalk": "^3.0.0",
        "express": "^4.16.2",
        "mongodb": "^3.0.1",
        "react-redux": "^5.0.6",
        "redux": "^3.7.2",
        "redux-observable": "^0.17.0",
        "rxjs": "^5.5.6"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.4",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/preset-env": "^7.8.4",
        "concurrently": "^5.1.0",
        "cross-env": "^7.0.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.7",
        "prettier": "^1.19.1",
        "redux-devtools-extension": "^2.13.8"
    },
    "scripts": {
        "precommit": "lint-staged",
        "start": "yarn build && concurrently --kill-others \"mongod --dbpath build/db\" \"yarn server\" \"yarn client start\"",
        "server": "yarn build && node build/index.js",
        "client": "node scripts/run-in-client.js",
        "build": "babel server -d build --copy-files --include-dotfiles --ignore spec.js,test.js",
        "postinstall": "yarn client"
    },
    "lint-staged": {
        "{server,client/src}/**/*.{js,jsx,json,css}": [
            "prettier --single-quote --arrow-parens always --print-width 100 --write",
            "git add"
        ]
    }
}
