{
  "name": "rttw-server",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^3.0.0",
    "express": "^4.17.1",
    "mongodb": "^3.5.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@types/mongodb": "^3.3.16",
    "@types/node": "^12.12.27",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-markdown": "^1.0.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-react": "^7.18.3",
    "eslint": "^6.8.0",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "build": "rimraf build && babel server -d build --copy-files --include-dotfiles --ignore spec.js,test.js --extensions '.js,.ts'",
    "client": "node scripts/run-in-client.js",
    "lint:eslint:errors": "yarn lint:eslint --quiet",
    "lint:eslint": "eslint '{src,client/src}/**/*.ts{,x}'",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:prettier --write",
    "lint:prettier": "prettier '**/*.{json,md}'",
    "lint": "yarn lint:eslint && yarn lint:prettier --check",
    "postinstall": "yarn client",
    "precommit": "lint-staged",
    "server": "yarn build && concurrently --kill-others \"mongod --dbpath build/db\" \"sleep 1; node build/index.js\"",
    "start": "yarn build && concurrently --kill-others \"yarn server\" \"yarn client start\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{j,t}s": [
      "eslint --fix",
      "git add"
    ],
    "**/*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
