{
    "name": "rttw-server",
    "version": "0.2.0",
    "private": true,
    "dependencies": {
        "body-parser": "^1.18.2",
        "chalk": "^2.3.0",
        "express": "^4.16.2",
        "mongodb": "^3.0.1",
        "react-redux": "^5.0.6",
        "redux": "^3.7.2",
        "redux-observable": "^0.17.0",
        "rxjs": "^5.5.6"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-preset-env": "^1.6.1",
        "concurrently": "^3.5.1",
        "husky": "^0.14.3",
        "lint-staged": "^6.0.0",
        "prettier": "^1.9.2",
        "redux-devtools-extension": "^2.13.2"
    },
    "scripts": {
        "precommit": "lint-staged",
        "start": "concurrently \"yarn server\" \"yarn client start\"",
        "server": "yarn build && node build/index.js",
        "client": "node scripts/run-in-client.js",
        "build": "babel server -d build --copy-files --ignore spec.js,test.js"
    },
    "lint-staged": {
        "{server,client/src}/**/*.{js,jsx,json,css}": [
            "prettier --single-quote --arrow-parens always --print-width 100 --write",
            "git add"
        ]
    }
}
