{
  "name": "rttw-server",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^3.0.0",
    "express": "^4.17.1",
    "mongodb": "^3.5.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.2",
    "@types/mongodb": "^3.3.16",
    "@types/node": "^12.12.27",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-markdown": "^1.0.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "mkdirp": "^1.0.3",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "client": "node scripts/run-in-client.js",
    "db:prepare": "rimraf build && mkdirp build/db",
    "lint:eslint:errors": "yarn lint:eslint --quiet",
    "lint:eslint": "eslint '{server/src,client/src}/**/*.ts{,x}'",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:prettier --write",
    "lint:prettier": "prettier '**/*.{json,md}'",
    "lint": "yarn lint:eslint && yarn lint:prettier --check",
    "postinstall": "yarn client && yarn db:prepare",
    "precommit": "lint-staged",
    "start:client": "yarn client start",
    "start:server": "concurrently --kill-others \"mongod --dbpath build/db\" \"sleep 1; ts-node server/src/index.ts\"",
    "start": "concurrently --kill-others \"yarn start:server\" \"yarn start:client\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{j,t}s": [
      "eslint --fix",
      "git add"
    ],
    "**/*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
