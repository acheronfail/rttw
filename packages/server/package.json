{
  "name": "@rttw/server",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "@rttw/common": "0.1.0",
    "chalk": "^3.0.0",
    "change-case": "^4.1.1",
    "fastify": "^2.12.0",
    "mongodb": "^3.5.3",
    "playwright": "^0.11.1"
  },
  "devDependencies": {
    "@types/mongodb": "^3.3.16",
    "@types/node": "^12.12.27",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "mkdirp": "^1.0.3",
    "pino-pretty": "^3.6.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "build": "tsc --build --verbose ./tsconfig.json",
    "db:prepare": "rimraf dist && mkdirp dist/db",
    "postinstall": "yarn db:prepare",
    "start:db": "mongod --quiet --dbpath dist/db",
    "start:server": "ts-node-dev --no-notify -r tsconfig-paths/register src/index.ts",
    "start": "concurrently --kill-others 'yarn start:db' 'sleep 1; yarn start:server'"
  }
}
